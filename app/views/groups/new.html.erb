<header>
  <h1>New Category</h1>
</header>
<main>
  <section>
  <%= form_with model: @group, class: "form" do |f| %>
        <div class="field">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        <div class="field">
        <%= f.label :icon, "Icon link *" %>
        <%= f.text_field :icon, autofocus: true, autocomplete: "icon" %>
        </div>
        <div class="actions">
        <%= f.submit "Add a Category", data: { turbo: false }, class: "btn" %>
        </div>
    <% end>
  </section>
</main>
